@inject IUserSessionService userSession
@{
    SessionUser LoginUser = userSession.Get("LoginUser");
}
@{
    Layout = "./_Layout.cshtml";
    ViewData["Title"] = "_UserDetailLayout";
}

<div class="row">
    <div class="col-3">
        <div class="UserImage border border-secondary rounded">
            <img class="img-fluid rounded" src="~/UserImages/@LoginUser.ProfilePhoto" asp-append-version="true" />
        </div>
        <ul class="mt-3 list-unstyled">
            <li class="font-weight-bold text-center">@LoginUser.FirstName @LoginUser.LastName</li>
            <li >@LoginUser.CreateDate.ToLongDateString() Tarihinde katıldı</li>
        </ul>
        <div class="list-group mt-3">
            <a href="#" class="list-group-item list-group-item-action">Hesap Ayarları</a>
            <a href="#" class="list-group-item list-group-item-action">Profil Düzenle</a>
        </div>
    </div>
    <div class="col-9">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item ">
                <a class="nav-link active" asp-area="" asp-controller="UserDetail" asp-action="Account">Bloglarım</a>
            </li>
            <li class="nav-item ">
                <a class="nav-link active" asp-area="" asp-controller="UserDetail" asp-action="Account">Beğendiklerim</a>
            </li>
            <li class="nav-item ">
                <a class="nav-link active" asp-area="" asp-controller="UserDetail" asp-action="Account">Okuma Listesi</a>
            </li>
            <li class="nav-item ">
                <a class="nav-link active" asp-area="" asp-controller="UserDetail" asp-action="Account">Yorumlarım</a>
            </li>
        </ul>
        <div style="overflow-y:scroll;max-height:70vh">
            @RenderBody()
        </div>
    </div>
</div>

