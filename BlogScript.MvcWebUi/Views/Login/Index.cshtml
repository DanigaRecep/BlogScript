@model UserViewModel
@{
    ViewData["Title"] = "Index";
}

@if (ViewBag.AlertMassage != null)
{
    <div class="alert alert-warning" role="alert">
        @ViewBag.AlertMassage
    </div>
}

<form method="post" asp-area="" asp-controller="Login" asp-action="Index">
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input type="text" asp-for="UserName" />
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" />
    </div>

    <input class="btn btn-success" type="submit" value="Giris Yap" />
    <a class="btn btn-primary"  asp-area="" asp-controller="Login" asp-action="Register" >Kayıt ol</a>
</form>

