@model BlogCreateViewModel
@{
    ViewData["Title"] = "Create";
}

@if (ViewBag.ErrorMassage != null)
{
    <div class="alert alert-warning" role="alert">
        @ViewBag.ErrorMassage
    </div>
}

<form enctype="multipart/form-data" asp-area="" asp-controller="Blog" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Categoryid"></label>
        <select class="form-control" asp-for="Categoryid" asp-items="Model.Categories">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" type="text" asp-for="Title" />
    </div>
    <div class="form-group">
        <label asp-for="Discription"></label>
        <input  class="form-control" type="text" asp-for="Discription" />
    </div>
    <div class="form-group">
        <label asp-for="Tags"></label>
        <input class="form-control" type="text" asp-for="Tags" />
    </div>

    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea id="editor1" name="Content">
	        @Html.Raw(Model.Content)
        </textarea>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-success form-control" value="Olustur" />
        <input type="reset" class="btn btn-danger form-control mt-2" value="Temizle" />
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
